<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.geekymusketeers.medify.ui.mainFragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_doctorDetailsFragment"
            app:destination="@id/doctorDetailsFragment"
            app:popUpTo="@id/home"/>
    </fragment>
    <fragment
        android:id="@+id/settings"
        android:name="com.geekymusketeers.medify.ui.mainFragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/stats"
        android:name="com.geekymusketeers.medify.ui.mainFragments.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" />
    <fragment
        android:id="@+id/appointment"
        android:name="com.geekymusketeers.medify.ui.mainFragments.PatientAppointmentFragment"
        android:label="fragment_appointment"
        tools:layout="@layout/fragment_patient_appointment" />
    <fragment
        android:id="@+id/doctorDetailsFragment"
        android:name="com.geekymusketeers.medify.ui.mainFragments.appointment.DoctorDetailsFragment"
        android:label="fragment_doctor_details"
        tools:layout="@layout/fragment_doctor_details" >
        <argument
            android:name="doctor_details"
            app:argType="com.geekymusketeers.medify.model.User" />
        <action
            android:id="@+id/action_doctorDetailsFragment_to_appointmentBookingFragment"
            app:destination="@id/appointmentBookingFragment" />
    </fragment>
    <fragment
        android:id="@+id/appointmentBookingFragment"
        android:name="com.geekymusketeers.medify.ui.mainFragments.appointment.AppointmentBookingFragment"
        android:label="fragment_appointment_booking"
        tools:layout="@layout/fragment_appointment_booking" >
        <argument
            android:name="doctor_details"
            app:argType="com.geekymusketeers.medify.model.User" />
    </fragment>
</navigation>